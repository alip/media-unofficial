require multilib

MY_PNV="lib${PNV}"

SUMMARY="GObject wrapper for Exiv2"
DESCRIPTION="
gexiv2 is a GObject-based wrapper around the Exiv2 library. It makes the basic features of Exiv2
available to GNOME applications.
"
HOMEPAGE="http://trac.yorba.org/wiki/${PN}"
DOWNLOADS="http://yorba.org/download/${PN}/$(ever range 1-2)/${MY_PNV}.tar.bz2"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        dev-libs/glib:2
        graphics/exiv2[>=0.19]
"

WORK="${WORKBASE}/${MY_PNV}"

DEFAULT_SRC_INSTALL_PARAMS=( "LIB=$(get_libdir)" )

src_configure() {
    # configure script is written in Bash
    edo ./configure --prefix=/usr
}

